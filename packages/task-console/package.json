{
  "name": "@kogito-apps/task-console",
  "version": "1.0.0",
  "main": "index.js",
  "author": "",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/kiegroup/kogito-apps.git"
  },
  "scripts": {
    "precommit": "lint-staged",
    "build:prod": "yarn run lint && webpack --config webpack.prod.js && yarn run test",
    "start": "webpack-dev-server --hot --color --progress --info=true --config webpack.dev.js",
    "test:report": "yarn test --ci --reporters=jest-junit",
    "test": "jest --runInBand --ci --reporters=default --reporters=jest-junit",
    "update-snapshot": "jest --updateSnapshot",
    "test:coverage": "jest --coverage",
    "lint": "tslint -c ./tslint.json --project . './src/**/*.ts{,x}'",
    "dev": "concurrently 'yarn run   start' 'yarn run dev:server'",
    "dev-remote-dataindex": "yarn start --define process.env.KOGITO_DATAINDEX_HTTP_URL='\"http://localhost:8180\"'",
    "dev-auth": "concurrently 'yarn start-auth' 'yarn run dev:server'",
    "dev-remote-dataindex-auth": "yarn start-auth --define process.env.KOGITO_DATAINDEX_HTTP_URL='\"http://localhost:8180\"'",
    "dev:server": "nodemon ./server/app.js",
    "format": "prettier --config ../../.prettierrc --check --write ./src/**/*.{tsx,ts,js}",
    "build:bundle-profile": "webpack --config webpack.prod.js --profile --json > stats.json",
    "bundle-profile:analyze": "yarn build:bundle-profile && webpack-bundle-analyzer ./stats.json",
    "clean": "rimraf dist",
    "codegen": "graphql-codegen",
    "cypress:run": "cypress run",
    "cypress:open": "cypress open"
  },
  "dependencies": {
    "@apollo/react-hooks": "3.1.3",
    "@patternfly/react-core": "3.153.13",
    "@patternfly/react-icons": "3.15.16",
    "@patternfly/react-styles": "3.7.13",
    "@patternfly/react-table": "2.28.39",
    "@patternfly/react-tokens": "2.8.13",
    "ajv": "6.10.2",
    "apollo-boost": "0.4.4",
    "axios": "0.19.0",
    "camel-case": "3.0.0",
    "graphql": "14.6.0",
    "keycloak-js": "8.0.0",
    "lodash": "4.17.15",
    "lower-case": "1.1.4",
    "moment": "^2.24.0",
    "no-case": "2.3.2",
    "react-apollo": "^3.1.3",
    "react-apollo-hooks": "^0.5.0",
    "react-event-timeline": "^1.6.3",
    "react-router": "^5.0.1",
    "react-router-dom": "^5.1.2",
    "simpl-schema": "^1.5.7",
    "uniforms": "3.0.0-alpha.2",
    "uniforms-antd": "^2.6.7",
    "uniforms-bootstrap3": "^2.6.7",
    "uniforms-bootstrap4": "^2.6.7",
    "uniforms-bridge-graphql": "^2.6.7",
    "uniforms-bridge-json-schema": "^2.6.7",
    "uniforms-bridge-simple-schema": "^2.6.7",
    "uniforms-bridge-simple-schema-2": "^2.6.7",
    "uniforms-material": "^2.6.7",
    "uniforms-patternfly": "^0.0.8",
    "uniforms-semantic": "^2.6.7",
    "uniforms-unstyled": "^2.6.7",
    "upper-case": "1.1.3"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "setupFiles": [
      "../../config/Jest-config/test-shim.js",
      "../../config/Jest-config/test-setup.js"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "transform": {
      "^.+\\.(js|ts|tsx)$": "../../config/Jest-config/test-preprocessor.js",
      "\\.(js|ts|tsx)$": "../../node_modules/babel-jest",
      "^.+\\.(ts|tsx)$": "ts-jest",
      "\\.(jpg|jpeg|png|svg)$": "../../config/Jest-config/fileMocks.js"
    },
    "testMatch": [
      "**/tests/*.(ts|tsx|js)"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|svg)$": "../../config/Jest-config/fileMock.js",
      "\\.(scss|sass|css)$": "identity-obj-proxy"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn run format",
      "yarn run lint"
    ]
  }
}
