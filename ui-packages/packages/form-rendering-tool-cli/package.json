{
  "name": "@kogito-apps/form-rendering-tool-cli",
  "version": "1.0.0",
  "description": "",
  "license": "Apache-2.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "precommit": "lint-staged",
    "build": "tsc -m commonjs --outDir ./dist && webpack --config webpack.prod.js",
    "build:watch": "tsc -m commonjs --outDir ./dist -w && webpack --config webpack.dev.js --watch",
    "build:prod": "yarn run clean && yarn run lint && yarn run build && pkg dist/index.js",
    "test:report": "yarn test --ci --reporters=jest-junit",
    "test": "jest --runInBand --ci --reporters=default --reporters=jest-junit",
    "update-snapshot": "jest --updateSnapshot",
    "test:coverage": "yarn test --coverage",
    "lint": "eslint './src/**/*.ts{,x}'",
    "format": "prettier --config ../../.prettierrc --check --write './src/**/*.{tsx,ts,js}'",
    "clean": "rimraf dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kiegroup/kogito-apps.git"
  },
  "dependencies": {
    "@kogito-apps/form-rendering-tool": "1.0.0",
    "pkg": "^5.1.0",
    "yargs": "^17.0.1"
  },
  "devDependencies": {
    "lodash": "^4.14.2",
    "nexe": "^4.0.0-beta.18"
  },
  "files": [
    "dist"
  ],
  "jest": {
    "setupFiles": [
      "../../config/Jest-config/test-shim.js",
      "../../config/Jest-config/test-setup.js",
      "core-js"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "./src/static",
      "./src/graphql",
      "dist/"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest",
      "\\.(jpg|jpeg|png|svg)$": "../../config/Jest-config/fileMocks.js"
    },
    "testMatch": [
      "**/tests/*.(ts|tsx|js)"
    ],
    "moduleNameMapper": {
      "\\.(scss|sass|css)$": "identity-obj-proxy"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn run format",
      "yarn run lint"
    ]
  },
  "pkg": {
    "scripts": "src/**/*.ts",
    "targets": [
      "node14-linux-arm64"
    ],
    "outputPath": "dist"
  }
}
